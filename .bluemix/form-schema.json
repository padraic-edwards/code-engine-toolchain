{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "messages": {
    "$i18n": "locales.yml"
  },
  "title": {
    "$ref": "#/messages/deploy.title"
  },
  "description": {
    "$ref": "#/messages/deploy.description"
  },
  "longDescription": {
    "$ref": "#/messages/deploy.longDescription"
  },
  "type": "object",
  "properties": {
    "api-key": {
      "description": {
        "$ref": "#/messages/deploy.apikeyDescription"
      },
      "type": "string",
      "pattern": "\\S",
      "validator": {
        "v-type": "api-key"
      }
    },
    "registry-region": {
      "description": {
        "$ref": "#/messages/deploy.registryRegionDescription"
      },
      "type": "string",
      "disabled": false,
      "validator": {
        "v-type": "k8s-region",
        "params": [
          "api-key"
        ]
      }
    },
    "registry-namespace": {
      "description": {
        "$ref": "#/messages/deploy.registrynsDescription"
      },
      "type": "string",
      "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$",
      "validator": {
        "v-type": "k8s-registry-namespace",
        "params": [
          "registry-region"
        ],
        "validate": false
      }
    },
    "app-name": {
      "description": {
        "$ref": "#/messages/deploy.appDescription"
      },
      "type": "string",
      "pattern": "^[a-z0-9_]"
    },
    "coligo-project": {
      "description": "Coligo Project",
      "type": "string",
      "pattern": "^[a-z0-9_]"
    },
    "coligo-region": {
      "description": "Coligo Region",
      "type": "string",
      "pattern": "^[a-z0-9_]"
    },
    "coligo-resource-group": {
      "description": "Coligo Resource Group",
      "type": "string",
      "validator": {
        "v-type": "resource-group",
        "params": [
          "api-key"
        ]
      }
    }
  },
  "required": [
    "app-name",
    "api-key",
    "registry-region",
    "registry-namespace",
    "coligo-project",
    "coligo-region",
    "coligo-resource-group"
  ],
  "form": [
    {
      "type": "validator",
      "url": "/devops/validator/validator-v1.html"
    },
    {
      "type": "text",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.appName"
      },
      "key": "app-name"
    },
    {
      "type": "password",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.apikey"
      },
      "key": "api-key"
    },
    {
      "type": "table",
      "columnCount": 3,
      "widths": [
        "50%",
        "3%",
        "47%"
      ],
      "items": [
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/deploy.containerregRegion"
          }
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/deploy.containerregns"
          }
        },
        {
          "type": "select",
          "title": {
            "$ref": "#/messages/deploy.containerregRegion"
          },
          "key": "registry-region"
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "select",
          "readonly": false,
          "title": {
            "$ref": "#/messages/deploy.containerregns"
          },
          "key": "registry-namespace"
        }
      ]
    },
    {
      "type": "table",
      "columnCount": 5,
      "widths": [
        "32%",
        "2%",
        "32%",
        "2%",
        "32%"
      ],
      "items": [
        {
          "type": "label",
          "title": "Coligo Region"
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "label",
          "title": "Coligo Resource Group"
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "label",
          "title": "Coligo Project"
        },
        {
          "type": "select",
          "key": "coligo-region",
          "readonly": false
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "select",
          "key": "coligo-resource-group",
          "readonly": false
        },
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "select",
          "key": "coligo-project",
          "readonly": false
        }
      ]
    },
    {
      "type": "table",
      "columnCount": 1,
      "widths": [
        "100%"
      ],
      "items": [
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/deploy.clusterDescription"
          }
        }
      ]
    },
    {
      "type": "table",
      "columnCount": 1,
      "widths": [
        "100%"
      ],
      "items": [
        {
          "type": "label",
          "title": {
            "$ref": "#/messages/deploy.clusternsDescription"
          }
        }
      ]
    }
  ]
}
